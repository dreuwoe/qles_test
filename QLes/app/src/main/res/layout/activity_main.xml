<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Website"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00008B"
    android:clickable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:clipChildren="false"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welkom"
        android:layout_width="356dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Welkom bij QLES!"
        android:textColor="#E0FFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        tools:text="Welkom bij QLES" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="276dp"
        android:background="#E0FFFF"
        android:ems="10"
        android:hint="Vul hier uw e-mailadres in."
        android:inputType="textEmailAddress"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="212dp"
        android:background="#E0FFFF"
        android:ems="10"
        android:hint="Vul hier het wachtwoord in."
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/AfbeeldingLoga"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_test"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        app:layout_constraintRight_toRightOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/welkom"
        app:srcCompat="@drawable/logo_test"
        tools:srcCompat="@drawable/logo_test" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="128dp"
        android:clickable="true"
        android:drawingCacheQuality="auto"
        android:foreground="@android:drawable/ic_lock_power_off"
        android:labelFor="@id/start"
        android:layerType="software"
        android:soundEffectsEnabled="true"
        android:tag="@android:string/ok"
        android:transitionName="OK"
        android:onClick="Login"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="50dp"
        app:useCompatPadding="false"
        tools:rippleColor="@color/colorSecondary"
        tools:srcCompat="@android:drawable/ic_lock_power_off"
        />

    <Button
        android:id="@+id/websitelink"
        android:layout_width="71dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:autoLink="web"
        android:background="@color/colorSecondary"
        android:text="Website."
        android:textColor="@color/colorThird"
        android:textSize="10sp"
        android:onClick="ToWebsite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/registratie"
        android:layout_width="97dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorThird"
        android:text="Registreren."
        android:textSize="10sp"
        android:onClick="Registreren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>